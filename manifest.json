{
  "name": "Azure Pull Request Protect",
  "description": "A Chrome extension to protect Azure Pull Requests from violating branch policies.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup/pages/index.html"
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://dev.azure.com/*/*/_git/*/pullrequest/*"],
      "js": ["scripts/defaults.js","scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}